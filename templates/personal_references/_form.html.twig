
{% block body %}

    {{ form_start(form) }}
    <div class="content container-fluid">
        <div class="tab-content">
            <!-- Profile Info Tab -->
            <div class="row">
                {#Referencias personales#}
                <div class="col-md-6 d-flex">
                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Referencias personales <a href="#" class="edit-icon" data-bs-toggle="modal" data-bs-target="#family_info_modal"><i class="fa fa-pencil"></i></a></h3>
                            <ul class="personal-info">
                                {# Inicio Tabla #}
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="table-responsive">
                                            <table class="table table-hover table-white">
                                                <thead>
                                                </thead>
                                                <tbody>
                                                <tr>
                                                    <td>
                                                        {{ form_label(form.name) }}
                                                    </td>
                                                    <td>
                                                        {{ form_widget(form.name) }}
                                                    </td>
                                                    <td>
                                                        {{ form_label(form.lastNames) }}
                                                    </td>
                                                    <td>
                                                        {{ form_widget(form.lastNames) }}
                                                    </td>


                                                </tr>
                                                <tr>
                                                    <td>
                                                        {{ form_label(form.birthDay) }}
                                                    </td>
                                                    <td>
                                                        <div class="cal-icon">{{ form_widget(form.birthDay) }}</div>
                                                    </td>
                                                    <td>
                                                        {{ form_label(form.ocupation) }}
                                                    </td>
                                                    <td>
                                                        {{ form_widget(form.ocupation) }}
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td>
                                                        {{ form_label(form.gender) }}
                                                    </td>
                                                    <td>
                                                        {{ form_widget(form.gender) }}
                                                    </td>
                                                </tr>

                                                <tr>

                                                    <td>
                                                        {{ form_label(form.relationship) }}
                                                    </td>
                                                    <td>
                                                        {{ form_widget(form.relationship) }}
                                                    </td>
                                                </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                {# fin Tabla #}
                            </ul>

                        </div>
                    </div>
                </div>
                {#Family Information#}
                <div class="col-md-6 d-flex">
                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Family Informations <a href="#" class="edit-icon" data-bs-toggle="modal" data-bs-target="#family_info_modal"><i class="fa fa-pencil"></i></a></h3>
                            <div class="table-responsive">
                                <table class="table table-nowrap">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Relationship</th>
                                        <th>Date of Birth</th>
                                        <th>Phone</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Leo</td>
                                        <td>Brother</td>
                                        <td>Feb 16th, 2019</td>
                                        <td>9876543210</td>
                                        <td class="text-end">
                                            <div class="dropdown dropdown-action">
                                                <a aria-expanded="false" data-bs-toggle="dropdown" class="action-icon dropdown-toggle" href="#"><i class="material-icons">more_vert</i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a href="#" class="dropdown-item"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a href="#" class="dropdown-item"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>





    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form, {render_rest: false}) }}

{% endblock %}