{% extends 'base.html.twig' %}

{% block title %}Employees{% endblock %}

{% block body %}
<!-- Page Content -->
<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Perfil / {{ employee.getFullName }}</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                    <li class="breadcrumb-item active">Perfil</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card mb-0">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-view">
                        <div class="profile-img-wrap">
                            <div class="profile-img">
                                <a href="#"><img alt="" src="{% if employee.imageProfile %}{{ employee.imageProfile}}{% else%}{{ asset('assets/img/profiles/avatar-02.jpg') }}{% endif %}"></a>
                            </div>
                        </div>
                        <div class="profile-basic">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="profile-info-left">
                                        <h3 class="user-name m-t-0 mb-0">{{ employee.getFullName }}</h3>
                                        <h6 class="text-muted">{{ employee.nationality }}</h6>
                                        <div class="row align-items-center">
                                            <div class="col-sm-6">
                                                <div class="staff-id">Tipo de Documento : {{ employee.documentType }}</div>

                                            </div>
                                            <div class="col-sm-6">
                                                <div class="staff-id">Documento : {{ employee.document }}</div>
                                            </div>
                                        </div>
                                        <div class="row align-items-center">
                                            <div class="col-sm-6">
                                                <div class="small doj text-muted">Fecha de expiración : {{ employee.expirationDate ? employee.expirationDate|date('d-m-Y') : '' }} </div>

                                            </div>
                                            <div class="col-sm-6">
                                                <div class="small doj text-muted">Fecha de nacimiento : {{ employee.birthDay ? employee.birthDay|date('d-m-Y') : '' }} </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <ul class="personal-info">
                                        <li>
                                            <div class="title">Teléfono Celular:</div>
                                            <div class="text"><a href="">{{ employee.cellPhone }}</a></div>
                                        </li>
                                        <li>
                                            <div class="title">E-mail Personal:</div>
                                            <div class="text"><a href="">{{ employee.personalEmail }}</a></div>
                                        </li>
                                        <li>
                                            <div class="title">Género:</div>
                                            <div class="text">{{ employee.gender }}</div>
                                        </li>
                                        <li>
                                            <div class="title">Edad:</div>
                                            <div class="text">{{ employee.age }}</div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="pro-edit"><a data-bs-target="#profile_info"  class="edit-icon" href="{{ path('app_employees_edit', {'id': employee.id}) }}"><i class="fa fa-pencil"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card tab-box">
        <div class="row user-tabs">
            <div class="col-lg-12 col-md-12 col-sm-12 line-tabs">
                <ul class="nav nav-tabs nav-tabs-bottom">
                    <li class="nav-item"><a href="#emp_profile" data-bs-toggle="tab" class="nav-link active">Profile</a></li>
                    {% if 'ROLE_ADMIN' in app.user.roles %}
                        <li class="nav-item"><a href="#emp_document" data-bs-toggle="tab" class="nav-link">Documento</a></li>
                    {% endif %}
{#                    <li class="nav-item"><a href="#bank_statutory" data-bs-toggle="tab" class="nav-link">Bank & Statutory <small class="text-danger">(Admin Only)</small></a></li>#}
                </ul>
            </div>
        </div>
    </div>
    <div class="tab-content">
        <!-- Profile Info Tab -->
        <div id="emp_profile" class="pro-overview tab-pane fade show active">
            <div class="row">
                <div class="col-md-6 d-flex">
                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Personal Informations <a href="{{ path('app_employees_edit', {'id': employee.id}) }}" class="edit-icon"  data-bs-target="#personal_info_modal"><i class="fa fa-pencil"></i></a></h3>
                            <div class="row align-items-center">
                                <div class="col-sm-4">
                                    <div class="title">Lugar de nacimiento:</div>
                                    <div class="text-muted">{{ employee.birthPlace ? employee.birthDay|date('d-m-Y') : '' }}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">Dirección de residencia:</div>
                                    <div class="text-muted">{{ employee.fullResidenceAddress }}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">Estado civil:</div>
                                    <div class="text-muted">{{ employee.maritalStatus }}</div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-4">
                                    <div class="title">Provincia:</div>
                                    <div class="text-muted">{{ employee.province}}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">Distrito:</div>
                                    <div class="text-muted">{{ employee.district}}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">Corregimiento:</div>
                                    <div class="text-muted">{{ employee.Corregimiento }}</div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-4">
                                    <div class="title">Teléfono residencial:</div>
                                    <div class="text-muted">{{ employee.residentialTelephone}}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">¿Práctica deporte?:</div>
                                    <div class="text-muted">{% if employee.sportsPractice %}SI{% else %} NO {% endif %}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">¿Cuál?:</div>
                                    <div class="text-muted">{{ employee.whatSports }}</div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-12">
                                    <div class="title">¿Su Hobbie preferido es?:</div>
                                    <div class="text-muted">{{ employee.favoriteHobby }}</div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-4">
                                    <div class="title">Tipo de Licencia de Conducir:</div>
                                    <div class="text-muted">{{ employee.licenseType}}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">Fecha de expiración:</div>
                                    <div class="text-muted">{{ employee.expirationDateLicense ? employee.birthDay|date('d-m-Y') : '' }}</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="title">¿Tiene auto propio?:</div>
                                    <div class="text-muted">{% if employee.hasOwnCar %}SI{% else %} NO {% endif %}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 d-flex">
                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Emergency Contact <a href="{{ path('app_employees_edit', {'id': employee.id}) }}" class="edit-icon"  data-bs-target="#emergency_contact_modal"><i class="fa fa-pencil"></i></a></h3>
                            <h5 class="section-title">Primary</h5>
                            <div class="row align-items-center">
                                <div class="col-sm-6">
                                    <div class="title">En caso de emergencia llamar a :</div>
                                    <div class="text-muted">{{ employee.inCaseOfEmergency}}</div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="title">No. de teléfono del familiar :</div>
                                    <div class="text-muted">{{ employee.familyPhoneNumber}}</div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-6">
                                    <div class="title">¿Es alérgico a algún medicamento o comida?:</div>
                                    <div class="text-muted">{% if employee.allergic %}SI{% else %} NO {% endif %}</div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="title">Sí su respuesta es SÍ detallar :</div>
                                    <div class="text-muted">{{ employee.allergicYes}}</div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-6">
                                    <div class="title">¿Padece de alguna enfermedad crónica?:</div>
                                    <div class="text-muted">{% if employee.chronicDisease %}SI{% else %} NO {% endif %}</div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="title">Sí su respuesta es SÍ detallar:</div>
                                    <div class="text-muted">{{ employee.chronicDiseaseYes}}</div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-6">
                                    <div class="title">Tipo de sangre:</div>
                                    <div class="text-muted">{{ employee.bloodType}}</div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="title">¿Usted es donante de sangre?:</div>
                                    <div class="text-muted">{% if employee.bloodDonor %}SI{% else %} NO {% endif %}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 d-flex">
                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Bank information</h3>
                            <ul class="personal-info">
                                <li>
                                    <div class="title">Bank name</div>
                                    <div class="text">ICICI Bank</div>
                                </li>
                                <li>
                                    <div class="title">Bank account No.</div>
                                    <div class="text">159843014641</div>
